---
import { Markdown } from "astro/components";
import Layout from "src/components/layout.astro";
import Header from "src/components/header.astro";
export const getStaticPaths = async () => {
  let posts = [];
  try {
    posts = await Astro.glob("../../../../data/posts/*.md");
  } catch {}
  return posts.map((post) => {
    const uid = post.file.split("/").at(-1).slice(0, -3);
    return {
      params: { slug: post.frontmatter.slug },
      props: {
        post: {
          uid,
          ...post.frontmatter,
          markdown: post.rawContent(),
          getHeaders: post.getHeaders,
        },
      },
    };
  });
};

const { slug } = Astro.params;
const { post } = Astro.props;

const headers = await post.getHeaders();
const firstHeaderText = headers.find((h) => h.depth === 1)?.text;

const shouldShowTitle = firstHeaderText !== post.title;
---

<Layout pageTitle={`${post.title} Â· tom`}>
  <Header actualPath={`posts/${slug}`} />

  {post.imageUrl ? (
    <img
      src={post.imageUrl}
      style="width:100%;aspect-ratio:3/2;background:#222"
    />
  ) : null}
  {shouldShowTitle ? <h1>{post.title}</h1> : null}
  <article class="auto">
    <Markdown content={post.markdown}>

    </Markdown>
  </article>
</Layout>
