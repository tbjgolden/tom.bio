---
import Layout from "src/components/layout.astro";
import Header from "src/components/header.astro";
import News from "src/components/news";
---

<Layout pageTitle="news">
  <div style="text-align:center">
    <h1 style="margin-top:0">news</h1>

    <div id="news" style="min-height:100vh;">
      <News client:load />
    </div>

    <hr />

    <aside style="color:#888;font-size:12px;">
      <p style="font:inherit;margin:.5em 0;">
        World news autogenerated from Wikipedia.
      </p>
      <p style="font:inherit;margin:.5em 0;">
        Low bias, broad range, undoomscrollable.
      </p>
      <p style="font:inherit;margin:.5em 0;">
        Exactly what you need to know, and no more.
      </p>
    </aside>

    <div
      id="sandbox"
      style="position:absolute;width:1px;height:1px;padding:0;margin:-1px;overflow:hidden;clip:rect(0,0,0,0);border:0;"
    >
    </div>

    <div id="poppers"></div>
  </div>
</Layout>

<style is:global>
  #news .pageref {
    text-decoration: underline;
    text-decoration-style: dotted;
    text-decoration-thickness: 2px;
    text-decoration-color: #999;
    cursor: help;
    position: relative;
  }

  #news .day {
    color: #999;
    margin-top: 1em;
  }

  #poppers .tooltip {
    width: 500px;
    font-size: 12px;
    max-width: 100%;
    padding: 16px;
  }

  #poppers .tooltip-inner {
    width: 100%;
    padding: 12px 16px 6px;
    background: #222;
    border: 2px solid #000;
    overflow: hidden;
  }

  #poppers .tooltip-inner:not(.has-thumbnail) :first-child {
    margin-top: 0;
  }
  #poppers .tooltip-inner.has-thumbnail :nth-child(2) {
    margin-top: 0;
  }
  #poppers .tooltip-inner :last-child {
    margin-bottom: 6px;
  }
  #poppers .tooltip-inner > * {
    font-size: inherit;
    text-align: left;
  }
  #poppers .thumbnail {
    width: 120px;
    height: auto;
    float: right;
    margin: 0 0 6px 8px;
    background: #333;
  }
</style>
